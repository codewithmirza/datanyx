{
  "files.associations": {
    "*.css": "postcss"
  },
  "css.validate": false,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "url": "./node_modules/@types/package-json/package.json"
    }
  ],
  "json.validate.enable": false
} 